{
  "name": "@bothrs/eslint-config-react",
  "description": "ESLint configuration used for React projects at Bothrs.",
  "repository": "git@github.com:bothrs/eslint-config.git",
  "author": {
    "name": "Bothrs",
    "email": "dev@bothrs.com",
    "url": "https://bothrs.com"
  },
  "contributors": [
