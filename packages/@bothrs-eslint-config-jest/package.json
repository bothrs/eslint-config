    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:spec": "eslint --format json",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "@bothrs/eslint-config": "^2.3.4",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-formatting": "^3.1.0"
  },
  "peerDependencies": {
    "eslint": "9",
    "jest": "28 - 29",
    "prettier": "3"
  }
}
