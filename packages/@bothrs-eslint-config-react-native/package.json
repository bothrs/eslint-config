    "@react-native-community/eslint-config": "^3.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-react-native-a11y": "^3.5.1"
  },
  "peerDependencies": {
    "eslint": "9",
    "prettier": "3",
    "react": ">=19",
    "react-native": "^0.78.0"
