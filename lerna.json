{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "bootstrap": {
      "forceLocal": true
    },
    "version": {
      "allowBranch": "main",
      "createRelease": "github",
      "conventionalCommits": true,
      "tagVersionPrefix": "release/v",
      "private": false
    },
    "publish": {
      "private": false
    }
  },
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "useWorkspaces": false,
  "version": "independent"
}
